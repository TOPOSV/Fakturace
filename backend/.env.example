# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/fakturace"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION="7d"

# Application
NODE_ENV="development"
PORT=3001

# ARES API (Czech company registry)
ARES_API_URL="https://ares.gov.cz/ekonomicke-subjekty-v-be/rest/ekonomicke-subjekty"

# VIES API (EU VAT registry)
VIES_API_URL="https://ec.europa.eu/taxation_customs/vies/rest-api/ms"

# Email configuration (for reminders)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@fakturace.cz"

# Bank API (placeholder - specific to bank provider)
BANK_API_KEY=""
BANK_API_URL=""

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# Redis (for queue and cache)
REDIS_HOST="localhost"
REDIS_PORT=6379

# File storage
UPLOAD_PATH="./uploads"
PDF_PATH="./pdfs"
